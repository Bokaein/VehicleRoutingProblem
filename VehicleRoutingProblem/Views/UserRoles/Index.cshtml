@model IEnumerable<VehicleRoutingProblem.Models.UserRoleViewModel.IndexViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RolesName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>

                @Html.DisplayFor(modelItem => item.RolesName)
            </td>
            <td>
             
                @Html.ActionLink(item.UserName, "Details", "Users", new { id = item.UserId }, null)
                
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { UserId = item.UserId ,RoleId=item.RoleId})
            </td>
        </tr>
}
    </tbody>
</table>
